<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context="com.buluoxing.famous.user.AreaActivity">


    <include layout="@layout/activity_top"/>

    <TextView
        android:text="我的领域"
        android:textSize="@dimen/px70"
        android:layout_marginLeft="@dimen/px50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.buluoxing.famous.view.FlowLayout
        android:id="@+id/is_area"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px260">

    </com.buluoxing.famous.view.FlowLayout>

    <com.buluoxing.famous.view.FlowLayout
        android:id="@+id/all_area"
        android:background="#E5E5F5"
        android:padding="20dp"
        android:layout_marginTop="@dimen/px50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.buluoxing.famous.view.FlowLayout>


</LinearLayout>
