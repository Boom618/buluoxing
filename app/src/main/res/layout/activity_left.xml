<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.buluoxing.famous.LeftActivity"
    android:background="#88000000"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="@dimen/px827"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px497">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px302"
                android:background="@drawable/left_top"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/px202"
                android:layout_height="@dimen/px202"
                android:layout_marginLeft="@dimen/px88"
                android:layout_marginTop="@dimen/px217"
                app:civ_border_color="#ffffff"
                app:civ_border_width="@dimen/px13"
                android:src="@drawable/default_avatar"
                />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:text=""
                android:layout_marginLeft="@dimen/px325"
                android:layout_marginTop="@dimen/px367"
                android:textSize="@dimen/px40"
                android:textColor="#3d3d3d"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/username"
                android:layout_below="@+id/username"
                android:id="@+id/city_area"
                android:text=""
                android:textSize="@dimen/px35"
                android:textColor="#919191"
                android:layout_marginTop="@dimen/px23"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/blue_common"
                android:textSize="@dimen/px29"
                android:text="lv.1"
                android:layout_marginLeft="@dimen/px160"
                android:layout_marginTop="@dimen/px438"
                android:id="@+id/kol_level"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px153"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px697"
            android:background="@drawable/left_menu"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px135"
                android:paddingLeft="@dimen/px204"
                android:text="@string/sign"
                android:gravity="center_vertical"
                android:textSize="@dimen/px40"
                android:textColor="#3d3d3d"
                android:id="@+id/sign_in"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px135"
                android:paddingLeft="@dimen/px204"
                android:text="@string/add_money"
                android:gravity="center_vertical"
                android:textSize="@dimen/px40"
                android:textColor="#3d3d3d"
                android:id="@+id/add_money"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px135"
                android:paddingLeft="@dimen/px204"
                android:text="@string/get_money"
                android:gravity="center_vertical"
                android:textSize="@dimen/px40"
                android:textColor="#3d3d3d"
                android:id="@+id/get_money"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px135"
                android:paddingLeft="@dimen/px204"
                android:text="@string/change_password"
                android:gravity="center_vertical"
                android:textSize="@dimen/px40"
                android:textColor="#3d3d3d"
                android:id="@+id/change_password"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px135"
                android:paddingLeft="@dimen/px204"
                android:text="@string/invit_friends"
                android:gravity="center_vertical"
                android:textSize="@dimen/px40"
                android:textColor="#3d3d3d"
                android:id="@+id/invit_friends"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px135"
            android:orientation="horizontal"
            android:id="@+id/Left_OnclientService"
            >
            <ImageView
                android:layout_width="@dimen/px63"
                android:layout_height="@dimen/px60"
                android:background="@drawable/user_center_online_service"
                android:layout_marginLeft="@dimen/px101"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onlineService"
                android:textSize="@dimen/px40"
                android:textColor="#3d3d3d"
                android:layout_marginLeft="@dimen/px37"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px135"
            android:orientation="horizontal"
            android:id="@+id/user_set_up"
            >
            <ImageView
                android:layout_width="@dimen/px63"
                android:layout_height="@dimen/px60"
                android:background="@drawable/setup"
                android:layout_marginLeft="@dimen/px101"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup"
                android:textSize="@dimen/px40"
                android:textColor="#3d3d3d"
                android:layout_marginLeft="@dimen/px37"
                />
        </LinearLayout>
    </LinearLayout>
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/right_blank"-->
        <!--android:orientation="vertical"-->
        <!--/>-->
</LinearLayout>
