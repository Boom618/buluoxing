<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="@dimen/px132"
        android:layout_height="@dimen/px132"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px46"
        >
        <ImageView
            android:layout_width="@dimen/px132"
            android:layout_height="@dimen/px132"
            android:background="@drawable/default_avatar"
            android:scaleType="fitXY"
            android:id="@+id/user_icon"
            />
        <ImageView
            android:layout_width="@dimen/px132"
            android:layout_height="@dimen/px132"
            android:background="@drawable/user_icon_cover"
            />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="@dimen/px566"
        android:layout_height="@dimen/px179"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/px42"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:textSize="@dimen/px40"
            android:text=""
            android:id="@+id/username"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#474747"
            android:textSize="@dimen/px40"
            android:text=""
            android:id="@+id/get_money"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c6c6c6"
            android:textSize="@dimen/px35"
            android:text="@string/complte_time"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c6c6c6"
            android:textSize="@dimen/px35"
            android:text="2016-04-29"
            android:id="@+id/complete_time"
            />
    </LinearLayout>
</LinearLayout>