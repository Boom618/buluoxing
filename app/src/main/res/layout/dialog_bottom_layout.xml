<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9d2631"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_openCamera"
            style="@style/bottom_dialog_button_style"
            android:alpha="150"
            android:background="@drawable/df_table_item_center"
            android:text="拍照"
            tools:ignore="UnusedAttribute"/>

        <Button
            android:id="@+id/id_openPhtots"
            style="@style/bottom_dialog_button_style"
            android:layout_marginTop="0.1dp"
            android:alpha="150"
            android:background="@drawable/df_table_item_bottom"
            android:text="从相册选择"
            tools:ignore="UnusedAttribute"/>

        <Button
            android:id="@+id/id_hide"
            style="@style/bottom_dialog_button_style"
            android:layout_marginTop="5dp"
            android:alpha="150"
            android:background="@drawable/df_table_item_single"
            android:text="取消"
            android:textColor="#333333"
            tools:ignore="UnusedAttribute"/>
    </LinearLayout>

</RelativeLayout>