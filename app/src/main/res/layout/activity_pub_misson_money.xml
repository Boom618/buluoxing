<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context=".mission.PubMissonMoneyActivity"
    >
    <!--titlebar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px144"
        android:background="@drawable/title_bar_line">

        <TextView
            style="@style/TitleBarText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/pub_money_misson"/>

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px49"
            android:text="@string/cancel_true"
            android:textColor="#5e5e5e"
            android:textSize="@dimen/px46"
            />

        <Button
            android:id="@+id/pub_mission"
            android:layout_width="@dimen/px160"
            android:layout_height="@dimen/px79"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px43"
            android:background="@drawable/publish"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                style="@style/LineHorDeep"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/px26"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px40"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="@dimen/px48"
                        android:layout_height="@dimen/px46"
                        android:layout_marginLeft="@dimen/px43"
                        android:background="@drawable/url"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px23"
                        android:background="@drawable/line_bottom_shallow"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        >

                        <TextView
                            android:layout_width="@dimen/px236"
                            android:layout_height="@dimen/px146"
                            android:gravity="top"
                            android:text="@string/misson_href"
                            android:textColor="#4b4b4b"
                            android:textSize="@dimen/px40"
                            />

                        <EditText
                            android:id="@+id/mission_href"
                            android:layout_width="@dimen/px687"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="top"
                            android:hint="@string/please_input_mission_url"
                            android:textColor="#616164"
                            android:textSize="@dimen/px40"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px20"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="@dimen/px48"
                        android:layout_height="@dimen/px46"
                        android:layout_marginLeft="@dimen/px43"
                        android:background="@drawable/title"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px23"
                        android:background="@drawable/line_bottom_shallow"
                        >

                        <TextView
                            android:layout_width="@dimen/px236"
                            android:layout_height="@dimen/px146"
                            android:gravity="top|left"
                            android:text="@string/misson_title"
                            android:textColor="#4b4b4b"
                            android:textSize="@dimen/px40"
                            />

                        <com.diy.ContainsEmojiEditText
                            android:id="@+id/mission_title"
                            android:layout_width="@dimen/px687"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="top"
                            android:hint="@string/please_input_mission_title"
                            android:textColor="#616164"
                            android:textSize="@dimen/px40"
                            android:maxLength="25"
                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px20"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="@dimen/px48"
                        android:layout_height="@dimen/px46"
                        android:layout_marginLeft="@dimen/px43"
                        android:background="@drawable/mission_require"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px23"
                        >

                        <TextView
                            android:layout_width="@dimen/px236"
                            android:layout_height="@dimen/px146"
                            android:gravity="top|left"
                            android:text="任务要求"
                            android:textColor="#4b4b4b"
                            android:textSize="@dimen/px40"
                            />

                        <com.diy.ContainsEmojiEditText
                            android:id="@+id/mission_require"
                            android:layout_width="@dimen/px687"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="top"
                            android:hint="请写下您的要求，如转评须5字以上"
                            android:textColor="#616164"
                            android:textSize="@dimen/px40"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/LineHorDeep"
                android:layout_width="match_parent"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px26"
                android:background="@drawable/top_bottom_line"
                android:orientation="vertical"
                android:paddingBottom="@dimen/px20"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px118"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="@dimen/px48"
                        android:layout_height="@dimen/px46"
                        android:layout_marginLeft="@dimen/px43"
                        android:background="@drawable/mission_avatar"
                        />

                    <TextView
                        style="@style/EditorInputReal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px23"
                        android:text="任务封面"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="默认任务封面"
                            android:textSize="@dimen/px32"
                            />

                        <ImageView
                            android:layout_width="@dimen/px351"
                            android:layout_height="@dimen/px351"
                            android:layout_marginTop="@dimen/px10"
                            android:background="@drawable/icon"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户上传的任务封面(比例1:1)"
                            android:textSize="@dimen/px32"
                            />

                        <ImageView
                            android:id="@+id/upload_mission_avatar"
                            android:layout_width="@dimen/px351"
                            android:layout_height="@dimen/px351"
                            android:layout_marginTop="@dimen/px10"
                            android:scaleType="fitXY"
                            android:background="@drawable/add_share_img"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/LineHorDeep"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/px26"
                />

            <TextView
                style="@style/EditorInputReal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px118"
                android:background="@drawable/mission_request"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px115"
                android:text="任务类型"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px120"
                    android:layout_marginBottom="@dimen/px43"
                    android:background="#f1f1f1"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/wx_section"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/section_bg"
                        android:gravity="center"
                        android:text="@string/public_wx_href"
                        android:textColor="#5e5e5e"
                        android:textSize="@dimen/px40"
                        />

                    <TextView
                        android:id="@+id/weibo_section"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/weibo_url"
                        android:textColor="#5e5e5e"
                        android:textSize="@dimen/px40"
                        />

                    <TextView
                        android:id="@+id/other_section"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/other_url"
                        android:textColor="#5e5e5e"
                        android:textSize="@dimen/px40"
                        />
                </LinearLayout>

                <com.diy.AutoNewLineLayout
                    android:id="@+id/mission_type_list_wx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px100"
                    android:background="@drawable/title_bar_line"
                    android:orientation="vertical"
                    >
                </com.diy.AutoNewLineLayout>

                <com.diy.AutoNewLineLayout
                    android:id="@+id/mission_type_list_weibo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px100"
                    android:background="@drawable/title_bar_line"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                </com.diy.AutoNewLineLayout>

                <com.diy.AutoNewLineLayout
                    android:id="@+id/mission_type_list_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px100"
                    android:background="@drawable/title_bar_line"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                </com.diy.AutoNewLineLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/sample_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px112"
                android:orientation="vertical"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px135"
                android:layout_marginTop="@dimen/px27"
                android:background="@drawable/please_setup"
                android:paddingLeft="@dimen/px115"
                >

                <TextView
                    android:id="@+id/rate_info"
                    style="@style/EditorInputReal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLength="50"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/px115"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/mission_number"
                        style="@style/EditorInputReal"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px76"
                        android:background="@drawable/input_number_bg"
                        android:gravity="center"
                        android:hint="请输入可领取人数"
                        android:inputType="number"
                        android:textColor="#4cdae4"
                        android:textSize="@dimen/px35"
                        />

                    <TextView
                        style="@style/EditorInputReal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px10"
                        android:text="@string/person_can_get"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/px30"
                    >

                    <EditText
                        android:id="@+id/price_total"
                        style="@style/EditorInputReal"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px76"
                        android:background="@drawable/input_number_bg"
                        android:gravity="center"
                        android:hint="任务总金额"
                        android:inputType="numberDecimal"
                        android:textColor="#4cdae4"
                        android:textSize="@dimen/px35"
                        />

                    <TextView
                        style="@style/EditorInputReal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px10"
                        android:text="@string/yuan"
                        />
                </LinearLayout>

                <TextView
                    style="@style/EditorInputReal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px10"
                    android:text="平均每任务最低0元"
                    android:id="@+id/low_spend"
                    android:visibility="gone"
                    />
                <TextView
                    style="@style/EditorInputReal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px10"
                    android:text="平均每任务最低0元"
                    android:id="@+id/low_total_money"
                    />
                <LinearLayout
                    style="@style/LineHorShallow"
                    android:layout_marginTop="@dimen/px30"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/px30"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="明细"
                        style="@style/EditorInputReal"
                        />

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#ebebee"
                        android:layout_marginLeft="@dimen/px30"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/px30"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="红包金额："
                                style="@style/EditorInputReal"

                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ff0000"
                                android:text="0.0"
                                style="@style/EditorInputReal"
                                android:id="@+id/real_total"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"
                                android:layout_marginLeft="@dimen/px10"
                                style="@style/EditorInputReal"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="平均红包："
                                style="@style/EditorInputReal"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ff0000"
                                android:text="0.0"
                                style="@style/EditorInputReal"
                                android:id="@+id/per_price"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元/人"
                                android:layout_marginLeft="@dimen/px10"
                                style="@style/EditorInputReal"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="手续费："
                                style="@style/EditorInputReal"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ff0000"
                                android:text="0.0"
                                style="@style/EditorInputReal"
                                android:id="@+id/price_change"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"
                                android:layout_marginLeft="@dimen/px10"
                                style="@style/EditorInputReal"
                                />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px40"
                android:background="#ffffff"
                />

            <LinearLayout
                style="@style/LineHorDeep"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_marginTop="@dimen/px50"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/px50"
                    android:background="@mipmap/publish_money_type"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="红包类型"
                    style="@style/EditorInputReal"
                    android:layout_marginLeft="@dimen/px40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!--<TextView-->
                    <!--android:id="@+id/id_money_average"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:text="平分红包"-->
                    <!--android:layout_marginLeft="@dimen/px50"-->
                    <!--android:textColor="#336633"-->
                    <!--android:layout_height="wrap_content"/>-->

                <!--<TextView-->
                    <!--android:id="@+id/id_money_random"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:text="随机红包"-->
                    <!--android:layout_marginLeft="@dimen/px50"-->
                    <!--android:layout_height="wrap_content"/>-->

                <com.diy.MyRadioGroup
                    android:id="@+id/money_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px95"
                    >
                </com.diy.MyRadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px288"
                android:layout_marginTop="@dimen/px35"
                android:background="@drawable/request_bg"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px140"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/EditorInputReal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px114"
                        android:text="@string/age_request"
                        />

                    <TextView
                        android:id="@+id/start_old"
                        style="@style/EditorInputReal"
                        android:layout_width="@dimen/px161"
                        android:layout_height="@dimen/px69"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px95"
                        android:background="@drawable/input_number_bg"
                        android:gravity="center"
                        android:text="1岁"
                        android:textColor="#4b4b4b"
                        android:textSize="@dimen/px35"
                        />

                    <TextView
                        style="@style/EditorInputReal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px50"
                        android:text="@string/to"
                        />

                    <TextView
                        android:id="@+id/end_old"
                        style="@style/EditorInputReal"
                        android:layout_width="@dimen/px161"
                        android:layout_height="@dimen/px69"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px50"
                        android:background="@drawable/input_number_bg"
                        android:gravity="center"
                        android:text="100岁"
                        android:textColor="#4b4b4b"
                        android:textSize="@dimen/px35"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px140"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/EditorInputReal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px114"
                        android:text="@string/sex_limit"
                        />
                    <com.diy.MyRadioGroup
                        android:id="@+id/sex_radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px95"
                        >
                    </com.diy.MyRadioGroup>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/select_area"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px122"
                android:layout_marginTop="@dimen/px35"
                android:background="@drawable/position_title_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/EditorInputReal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px111"
                    android:text="@string/area_request"
                    />

                <TextView
                    android:id="@+id/area"
                    style="@style/EditorInputReal"
                    android:layout_width="@dimen/px534"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px99"
                    android:text="@string/all_city"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose"
                    android:textColor="@color/blue_common"
                    android:textSize="@dimen/px40"
                    />
            </LinearLayout>


            <TextView
                style="@style/EditorInputReal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px143"
                android:background="@drawable/time_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px115"
                android:text="@string/mission_deadline"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px75"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px114"
                        android:text="@string/time_start"
                        android:textColor="#616164"
                        android:textSize="@dimen/px40"
                        />

                    <!-- android:hint="请选择任务开始时间" -->
                    <EditText
                        android:id="@+id/start_time"
                        android:layout_width="@dimen/px583"
                        android:layout_height="@dimen/px75"
                        android:layout_marginLeft="@dimen/px62"
                        android:background="@drawable/input_number_bg"
                        android:focusable="false"
                        android:gravity="center"

                        android:textColor="#4b4b4b"
                        android:textSize="@dimen/px35"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px75"
