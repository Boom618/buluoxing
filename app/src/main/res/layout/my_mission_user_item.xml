<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="@dimen/px158"
            android:layout_height="@dimen/px158"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px46"
            >

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="@dimen/px158"
                android:layout_height="@dimen/px158"
                android:scaleType="fitXY"
                android:src="@drawable/default_avatar"
                />

            <ImageView
                android:layout_width="@dimen/px158"
                android:layout_height="@dimen/px158"
                android:background="@drawable/user_icon_cover"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/px196"
            android:layout_marginLeft="@dimen/px43"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="333"
                android:textColor="#777777"
                android:textSize="@dimen/px40"
                />

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px32"
                android:text="eeee"
                android:textColor="#303030"
                android:textSize="@dimen/px40"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/px452"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/complte_time"
                    android:textSize="@dimen/px30"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/complete_time"
                    android:textSize="@dimen/px30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6d6d6d"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px32"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/see_detail"
                    android:layout_width="@dimen/px236"
                    android:layout_height="@dimen/px55"
                    android:background="@drawable/see_detail_down"
                    />

                <ImageView
                    android:id="@+id/report"
                    android:layout_width="@dimen/px173"
                    android:layout_height="@dimen/px55"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f7fb"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:id="@+id/user_upload_list"
        >


    </LinearLayout>
</LinearLayout>