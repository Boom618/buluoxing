<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/px602"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_task_mode_info"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="#6d6d6d"
            android:textSize="@dimen/px40"
            />
        <ImageView
            android:layout_width="@dimen/px331"
            android:layout_height="@dimen/px444"
            android:id="@+id/mode_image"
            android:scaleType="fitXY"
            android:background="@drawable/loading_image"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/px602"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成任务截图"
            android:textColor="#6d6d6d"
            />
        <ImageView
            android:layout_width="@dimen/px331"
            android:layout_height="@dimen/px444"
            android:id="@+id/task_screenshot"
            android:scaleType="fitXY"
            android:background="@drawable/loading_image"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/px602"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/image_confirm_container"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认任务截图"
            android:textColor="#6d6d6d"
            />
        <ImageView
            android:layout_width="@dimen/px331"
            android:layout_height="@dimen/px444"
            android:id="@+id/image_confirm"
            android:scaleType="fitXY"
            android:background="@drawable/loading_image"
            />
    </LinearLayout>
</LinearLayout>