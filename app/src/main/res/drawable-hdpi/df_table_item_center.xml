<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--android:drawable="@drawable/df_table_item_center_pressed"-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/df_table_item_bgcolor_pressed"/>
            <!-- 圆角半径 -->
            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="0dip"
                android:topLeftRadius="5dip"
                android:topRightRadius="5dip"/>
        </shape>

    </item>
    <!-- android:drawable="@drawable/df_table_item_center_normal" -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/df_table_item_bgcolor_normal"/>
            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="0dip"
                android:topLeftRadius="5dip"
                android:topRightRadius="5dip"/>
        </shape>
    </item>

</selector>
