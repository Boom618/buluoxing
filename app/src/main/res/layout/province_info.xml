<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px46"
        android:background="@drawable/title_bar_line"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_bar"
            >
            <TextView
                android:layout_width="@dimen/px904"
                android:layout_height="@dimen/px115"
                android:text="湖南"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:id="@+id/province_name"
                android:textColor="#474747"
                android:textSize="@dimen/px40"
                />
            <ImageView
                android:layout_width="@dimen/px128"
                android:layout_height="@dimen/px112"
                android:background="@drawable/province_down"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:id="@+id/show_city_list"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city_list"
            android:orientation="vertical"
            android:visibility="gone"
            >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>