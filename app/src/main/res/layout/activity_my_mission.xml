<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.MyMissionActivity"
    android:orientation="vertical"
    android:background="@color/main_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px144"
        android:background="@drawable/title_bar_line">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/mission_progress"
            style="@style/TitleBarText"
            />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/px143"
            android:layout_height="@dimen/px143"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120"
        android:background="@drawable/title_bar_line"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/has_pubed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff0000"
                android:id="@+id/task_count"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mission_number"
                />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px124"
        android:background="@drawable/top_bottom_line"
        android:layout_marginTop="@dimen/px22"
        >
        <TextView
            android:layout_width="@dimen/px333"
            android:layout_height="match_parent"
            android:background="@drawable/tab_select"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/px115"
            android:text="@string/beans_mission"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="#47dfe4"
            android:textSize="@dimen/px40"
            android:id="@+id/show_beans"
            />

        <TextView
            android:layout_width="@dimen/px333"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px115"
            android:text="@string/money_mission"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="#919296"
            android:textSize="@dimen/px40"
            android:id="@+id/show_money"
            />
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe_container"
        >
    <com.diy.MyListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/mission_list"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        >

    </com.diy.MyListView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe_container2"
        android:visibility="gone"
        >
    <com.diy.MyListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/mission_list2"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        >
    </com.diy.MyListView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
